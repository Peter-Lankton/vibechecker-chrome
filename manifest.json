{
  "manifest_version": 3,
  "name": "VibeChecker â€“ AI Code Vibe Check",
  "version": "0.1.0",
  "description": "Run a local security vibe check on AI-generated code: SpookySecrets, Supabase issues, and privacy-unsafe logs.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Run a VibeCheck"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}

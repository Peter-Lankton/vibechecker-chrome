{
  "manifest_version": 3,
  "name": "VibeChecker â€“ AI Code Security Vibe Check",
  "version": "0.1.0",
  "description": "Highlight AI-generated code, run a local security vibe check, and copy a fix prompt for your AI helper. No code leaves your browser.",
  "action": {
    "default_title": "Run a VibeCheck"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*",
        "https://raw.githubusercontent.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",

        "https://replit.com/*",
        "https://bolt.new/*",
        "https://codesandbox.io/*",
        "https://stackblitz.com/*",

        "https://lovable.dev/*",
        "https://v0.dev/*",

        "https://supabase.com/*",
        "https://*.supabase.co/*",
        "https://console.supabase.com/*",

        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["contentScript.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vibechecker.js"],
      "matches": [
        "https://github.com/*",
        "https://gist.github.com/*",
        "https://raw.githubusercontent.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",

        "https://replit.com/*",
        "https://bolt.new/*",
        "https://codesandbox.io/*",
        "https://stackblitz.com/*",

        "https://lovable.dev/*",
        "https://v0.dev/*",

        "https://supabase.com/*",
        "https://*.supabase.co/*",
        "https://console.supabase.com/*",

        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ]
    }
  ]
}
